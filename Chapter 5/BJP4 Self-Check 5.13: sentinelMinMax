int min = 100;
int max = -1;
boolean run = true;
Scanner console = new Scanner(System.in);


while (run)
{
    System.out.print("Type a number (or -1 to stop): " );
    int number = console.nextInt();
    
    
    
    
    if (number == -1)
    {
        if (max != -1)
            System.out.println("Maximum was " + max);
        if (min != 100)
            System.out.print("Minimum was " + min);
        run = false;
    }
    
    if (number > max)
    {
        max = number;
    }
    if (number < min)
    {
        min = number;
    }
                  
}
