public static void printAverage(Scanner console) 
{
    System.out.print("Type a number: ");
    double sum = 0;
    int num = console.nextInt();
    int totalNum = 0;
    
    while (num >= 0) 
    {
        sum += num;
        System.out.print("Type a number: ");
        num = console.nextInt();
        totalNum++;
    }
    if (totalNum > 0) {
        System.out.println("Average was " + sum / totalNum);
    }
}
