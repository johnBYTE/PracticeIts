public static void threeHeads() 
{
    Random random = new Random();
    int numOfHead = 0;
    
    while (numOfHead < 3) 
    {
        int ht = random.nextInt(2);
        if (ht == 1) 
        {
            System.out.print("H ");
            numOfHead++;
        } else 
        {
            System.out.print("T ");
            numOfHead = 0;
        }
    }
    
    System.out.println();
    System.out.println("Three heads in a row!");
}
