Scanner console = new Scanner(System.in);
int total = 0;
int num = 0;

while (num != 3)
{
    System.out.print("Type an integer: ");
    
    if (console.hasNextInt())
    {
        total += console.nextInt();
        num ++;
    }  
    else
    {
        console.next();
    }
    
}

System.out.print("Average: " + total/3.0);
